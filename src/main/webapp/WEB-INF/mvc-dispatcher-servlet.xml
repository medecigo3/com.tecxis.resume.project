<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!--  Static resources handler (javascript, css, etc  )-->	
   <mvc:resources mapping="/resources/**" location="/resources/" />  
	
	<!-- Finds a view template contained within the web application's WAR file.   -->
	<bean  class="org.springframework.web.servlet.view.InternalResourceViewResolver">
	
		<!-- Path to the view is template is derived by prefixing and suffixing the logical view name -->  
		<property name="prefix" value="/WEB-INF/views/"/>
		<property name="suffix" value=".jsp"/>					  
	</bean> 
	
	<!-- Default Servlet sends all requests to Spring's DefaultAnnotationHandleMapping -->
	<mvc:annotation-driven/>
	
	<!-- Scans and registers beans with @Controller annotation in target package --> 	
	<context:component-scan base-package="com.tecxis.portal.mvc"/>
	
	
	 

	
</beans>
