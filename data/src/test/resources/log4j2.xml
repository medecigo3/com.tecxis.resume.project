<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <!-- Console Appender -->
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{yyyy-MMM-dd HH:mm:ss a} [%t] %-5level %logger{36} - %msg%n" />
    </Console>
    <!-- Spring Appender -->
    <File name="SpringFile" fileName="target/logs/spring.log">
      <PatternLayout pattern="%d{yyyy-MMM-dd HH:mm:ss a} [%t] %-5level %logger{36} - %msg%n" />
    </File>   
    <!-- File Appender -->
    <File name="HibernateFile" fileName="target/logs/hibernate.log">
      <PatternLayout pattern="%d{yyyy-MMM-dd HH:mm:ss a} [%t] %-5level %logger{36} - %msg%n" />
    </File>
    <!-- Std. out Appender -->
    <File name="StdoutFile" fileName="target/logs/stdout.log">
      <PatternLayout pattern="%d{yyyy-MMM-dd HH:mm:ss a} [%t] %-5level %logger{36} - %msg%n" />
    </File>
  </Appenders>
  <Loggers>
     <Logger name="com.tecxis" level="debug" additivity="false">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="StdoutFile"/>
    </Logger>
    <Logger name="org.springframework" level="info" additivity="false">
      <AppenderRef ref="SpringFile"/>
    </Logger>
    <!-- Log everything in hibernate -->
    <Logger name="org.hibernate" level="info" additivity="false">
      <AppenderRef ref="HibernateFile" />
    </Logger>
    <!-- Log SQL statements -->
    <Logger name="org.hibernate.SQL" level="debug" additivity="false">
      <AppenderRef ref="HibernateFile" />
    </Logger>
    <!-- Log JDBC bind parameters -->
    <Logger name="org.hibernate.type.descriptor.sql" level="trace" additivity="false">
      <AppenderRef ref="HibernateFile" />
    </Logger>
    <Root level="error">
      <AppenderRef ref="Console" />
      <AppenderRef ref="StdoutFile" />
    </Root>
  </Loggers>
</Configuration>